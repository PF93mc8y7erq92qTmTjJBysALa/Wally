<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/img_artist"
                android:minHeight="100dp"
                android:src="@color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_image_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Image by R.Sriram" />

                <TextView
                    android:id="@+id/tv_image_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    tools:text="A vintage analogue typewriter with a white plain paper" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_width"
            style="@style/InfoSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Width : 7500" />

        <TextView
            android:id="@+id/tv_height"
            style="@style/InfoSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Height : 11000" />

        <TextView
            android:id="@+id/tv_likes"
            style="@style/InfoSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Likes : 7500" />

        <TextView
            android:id="@+id/tv_views"
            style="@style/InfoSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Views : 75000" />

        <TextView
            android:id="@+id/tv_downloads"
            style="@style/InfoSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Downloads : 75000" />

        <!--<TextView-->
        <!--android:id="@+id/tv_categories"-->
        <!--style="@style/InfoSheetText"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="12dp"-->
        <!--android:textSize="14sp"-->
        <!--tools:text="Categories : Category 1, Category 2, Category 3" />-->

        <!--User Section-->

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/InfoSheetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="User" />

            <TextView
                android:id="@+id/tv_artist_name"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Name : R.Sriram" />

            <TextView
                android:id="@+id/tv_artist_location"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Location : Bielefeld, Germany" />


            <TextView
                android:id="@+id/tv_artist_unsplash_username"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Unsplash Username : florianklauer" />

            <!--<TextView-->
            <!--android:id="@+id/tv_artist_twitter_username"-->
            <!--style="@style/InfoSheetText"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="12dp"-->
            <!--android:textSize="14sp"-->
            <!--tools:text="Twitter Username : florianklauer" />-->

        </LinearLayout>


        <!--Camera Section-->

        <LinearLayout
            android:id="@+id/layout_exif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/InfoSheetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Camera" />

            <TextView
                android:id="@+id/tv_camera_make"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Make : Phase One" />

            <TextView
                android:id="@+id/tv_camera_model"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Model : 7500" />

            <TextView
                android:id="@+id/tv_camera_exposure"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Exposure Time : 1/125" />

            <TextView
                android:id="@+id/tv_camera_aperture"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Aperture : 22.0" />

            <TextView
                android:id="@+id/tv_camera_focal"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Focal Length : 75.0" />

            <TextView
                android:id="@+id/tv_camera_iso"
                style="@style/InfoSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Iso : 50" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_images_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/black"
            android:textColor="@color/white"
            tools:text="More Images from R.Sriram" />

    </LinearLayout>

</ScrollView>